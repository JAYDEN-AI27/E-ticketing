@model EventVM

@{
    ViewBag.Title = "Home | Demo 2 - DateTime Input";

    // Set min (-30 days) and max (+30 days) date range (yyyy-MM-dd)
    // TODO
    string min = DateTime.Today.AddDays(-30).ToString("yyyy-MM-dd");
    string max = DateTime.Today.AddDays(+30).ToString("yyyy-MM-dd");
}

<form class="form" method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <label asp-for="Date"></label>
    <div>
        <input asp-for="Date" autofocus min="@min" max="@max">
        <br><small>@min to @max</small>
    </div>
    <span asp-validation-for="Date"></span>

    <label asp-for="Time"></label>
    <input asp-for="Time">
    <span asp-validation-for="Time"></span>

    <label asp-for="Name"></label>
    <input asp-for="Name">
    <span asp-validation-for="Name"></span>

    <section>
        <button>Submit</button>
        <button type="reset">Reset</button>
    </section>
</form>
