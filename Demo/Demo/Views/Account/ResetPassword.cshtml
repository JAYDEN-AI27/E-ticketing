@model ResetPasswordVM
@{
    ViewData["Title"] = "Account | Reset Password";
}
<form asp-action="ResetPassword" method="post">
    <input type="hidden" asp-for="Token" />
    <div>
        
        <label>New Password</label>
        <input type="password" asp-for="NewPassword" autofocus placeholder="Enter new password"required />
    </div>
    <div>
        <label>Confirm Password</label>
        <input type="password" asp-for="ConfirmPassword" placeholder="Confirm new password" required />
    </div>
    <button type="submit">Reset</button>
</form>
