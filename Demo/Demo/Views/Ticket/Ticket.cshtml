@{
    ViewBag.Title = "Ticket";
}

<form data-ajax="true"
      data-ajax-update="#target"
      data-ajax-loading="#loader"
      id="f">
    @Html.TextBox("type", "",
    new { type = "search", autofocus = "", data_trim = "", placeholder = "TYPE" })

    @Html.TextBox("source", "",
        new { type = "search", autofocus = "", data_trim = "", placeholder = "SOURCE" })

    @Html.TextBox("destination", "",
    new { type = "search", autofocus = "", data_trim = "" , placeholder = "DESTINATION"})

    <button>Search</button>
    <img src="/images/loader.gif" id="loader" style="display: none">
</form>

<div id="target">
    <partial name="_T">
</div>

@section foot {
    <script>
        let timer = null;

        $('#name').on('input', e => {
            clearTimeout(timer);
            timer = setTimeout(() => $(e.target.form).submit(), 500);
        });
    </script>
}
