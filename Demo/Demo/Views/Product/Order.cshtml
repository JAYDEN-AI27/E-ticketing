@model X.PagedList.IPagedList<Order>

@{
    ViewBag.Title = "Order History";
}

<form id="orderForm"
      data-ajax="true"
      data-ajax-update="#target"
      data-ajax-loading="#loader">
    @Html.TextBox("search", ViewBag.Search as string ?? "",
    new { type = "search", placeholder = "Search Order ID..." })

    <button type="submit">Search</button>
    <img src="/images/loader.gif" id="loader" style="display: none" />
</form>

<div id="target">
    <partial name="_Order" model="Model" />
</div>

@section foot {
    <script>
        let timer = null;

        $('#search').on('input', e => {
            clearTimeout(timer);
            timer = setTimeout(() => $(e.target.form).submit(), 500);
        });
    </script>
}
